.regionSelect {
    font-size: 14px;
    background: #fff;
    box-shadow: 0 2px 5px -4px #777;
    margin-bottom: 20rpx;
}

.regionItem {
    float: left;
    text-align: center;
    width: 50%;
    padding: 30rpx 0;
}

.regionItem .picker {
    color: #666;
}

.regionItem .picker .arrow {
    width: 26rpx;
    height: 26rpx;
    margin-left: 4rpx;
    vertical-align: top;
    margin-top: 10rpx;
    display: inline-block;
}

.pickerText {
    overflow: hidden;
    display: inline-block;
}