.SwiperKefuLayout {
    position: relative;
    height: 266rpx;
}

.SwiperKefu {
    width: 100%;
    height: 266rpx;
    margin: 0;
    padding: 0;
    background: transparent;
    position: absolute;
    top: 0;
    left: 0;
}

.SwiperKefu::after {
    border: 0;
}

.NoticeList {
    padding: 30rpx 50rpx 30rpx 30rpx;
    background: #fff;
}

.noticeswiper {
    height: 40rpx;
    width: 500rpx;
    display: inline-block;
    line-height: 36rpx;
}

.noticetitle {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    float: left;
    width: 500rpx;
    height: 36rpx;
    color: #585858;
}

.noticetime {
    font-size: 28rpx;
    float: right;
    color: #787878;
}

.noticeico {
    width: 46rpx;
    height: 46rpx;
    margin-right: 20rpx;
    display: inline-block;
}

.noticeMorenav {
    width: 72rpx;
    height: 28rpx;
    float: right;
    margin-top: 8rpx;
}

.noticeMore {
    width: 72rpx;
    height: 28rpx;
    border: 1px solid #787878;
    font-size: 11px;
    text-align: center;
    line-height: 28rpx;
    border-radius: 6rpx;
}
