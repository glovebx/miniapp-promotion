.swiper {
    height: 266rpx;
}

.top-bar {
    height: 100rpx;
    background: #fff;
    width: 100%;
    border-bottom: 1px solid #eee;
    box-shadow: 0 3px 10px rgba(0,0,0,.06);
    margin-bottom: 10px;
}

.top-bar-item {
    display: inline-block;
    background: #fff;
    width: 31.3%;
    color: #777;
    text-align: center;
    font-size: 14px;
    line-height: 94rpx;
    margin: 0 1%;
}

.top-bar-item-Selected {
    border-bottom: 4px solid #ee4f4f;
    color: #ee4f4f;
    font-weight: bold;
}

.categoryList {
    background: #fff;
    width: 100%;
}

.categoryList .categoryItem {
  padding: 20rpx 0;
  float: left;
  text-align: center;
  width: 25%;
  height: 160rpx;

  /* display: flex; */
  /* flex-direction: column; */
  /* justify-content: center; */
  -webkit-tap-highlight-color: transparent;
  background: transparent; 
  border: none;
  border-radius: 0;
}

.categoryList .categoryItem::after {
  border: none;
}

.categoryItem .categoryIcon {
    width: 80rpx;
    height: 80rpx;
}

