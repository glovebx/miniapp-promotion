@import "../../resource/wxParse/wxParse.wxss";

.SwiperLayout {
    position: relative;
}

.swiper {
    height: 400rpx;
}

.activityInfo {
    background: #fff;
    padding: 20rpx 30rpx;
}

.activityInfo .activityTitle {
    font-size: 16px;
}

.activityInfo .Stock {
    font-size: 14px;
    margin-top: 10rpx;
}

.activityInfo .Stock .stockTips {
    font-size: 12px;
    color: #f60;
}

.posterImg {
    width: 0;
    height: 0;
    display: none;
}

.priceInfo {
    background: #fff;
    padding: 20rpx 0;
}

.priceInfo .PriceItem {
    float: left;
    font-size: 14px;
    width: 33.1%;
    text-align: center;
}

.priceInfo .PriceNum {
    font-size: 20px;
    color: #ee4f4f;
}

.priceInfo .PriceItem:nth-child(2) {
    border-right: 1px solid #eee;
    border-left: 1px solid #eee;
}

.activityStatus {
    background: #fff;
}

.activityStatus .statusText {
    font-size: 13px;
    padding: 20rpx 40rpx;
    border-top: 1px solid #eee;
}

.activityStatus .statusText .CountDown {
    color: #dbb243;
}

