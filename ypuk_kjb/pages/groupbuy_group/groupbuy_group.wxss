.activityInfo {
    background: #fff;
    padding: 20rpx 30rpx;
}

.activityInfo .activityTitle {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 14px;
    margin-bottom: 10rpx;
    line-height: 42rpx;
}

.activityInfo .activityStock {
    font-size: 14px;
    margin-top: 10rpx;
    color: #787878;
}

.activityInfo .activityPic {
    width: 160rpx;
    height: 160rpx;
    float: left;
}

.activityInfo .activityRight {
    float: left;
    width: 500rpx;
    margin-left: 20rpx;
}

.activityInfo .activityPrice {
    line-height: 40rpx;
}

.activityInfo .groupPrice {
    font-size: 14px;
    color: #ee4f4f;
}

.activityInfo .oldPrice {
    font-size: 13px;
    margin-left: 20rpx;
    color: #999;
}

.groupDetail {
    padding: 40rpx 30rpx 60rpx;
    background: #fff;
    border-top: 1px solid #eee;
}

.groupDetail .groupRecord {
    position: relative;
    margin: 0 50rpx;
    height: 120rpx;
}

.groupRecord .avatarList {
    position: absolute;
}

.groupRecord .avatarItem {
    position: relative;
    float: left;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.avatarItem .firstIcon {
    position: absolute;
    background: #f60;
    width: 60rpx;
    height: 30rpx;
    z-index: 99;
    top: 0;
    right: 0;
    font-size: 10px;
    text-align: center;
    color: #fff;
    line-height: 30rpx;
    border-radius: 10rpx;
}

.groupRecord .avatarItem:nth-child(5n) {
    margin-right: 0;
}

.groupRecord .avatarPic {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.groupRecord .avatarBg {
    position: absolute;
}

.groupRecord .avatarBgItem {
    width: 92rpx;
    height: 92rpx;
    border-radius: 50%;
    border: 2px solid #eee;
    float: left;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.groupRecord .avatarBgItem:nth-child(5n) {
    margin-right: 0;
}

.groupRecord .avatarBgIcon {
    text-align: center;
    line-height: 92rpx;
    color: #eee;
}

.groupText {
    font-size: 13px;
    text-align: center;
    margin-top: 20rpx;
}

.CountDownText {
    margin-left: 10rpx;
    margin-right: 4rpx;
}

.CountDown {
    color: #ee4f4f;
}

.shareBtn {
    background: #ee4f4f;
    color: #fff;
    width: 360rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size: 15px;
    margin-top: 40rpx;
}

.shareBtn::after {
    border: 0;
}

.shareMenu {
    background: #f9f9f9;
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 1000;
    text-align: center;
}

.shareMenu .menuItem {
    border-radius: 0;
    background: #fff;
    border-top: 1px solid #eee;
}

.shareMenu .menuItem.close {
    border: 0;
    margin-top: 10rpx;
}

.shareMenu .menuItem::after,.shareMenu .menuItem:nth-child(1) {
    border: 0;
}

.activityDesc {
    background: #fff;
    padding: 30rpx 40rpx 40rpx;
}

.activityDesc .descTitle {
    margin-top: 10rpx;
    font-size: 16px;
}

.activityDesc .descCon {
    font-size: 14px;
    margin: 20rpx 0;
}

.fixedLayout {
    bottom: 200rpx;
}

.RecommendLayout {
    background: #fff;
    padding-top: 6rpx;
    margin-top: 20rpx;
    padding-bottom: 30rpx;
}

.RecommendTitle {
    font-size: 14px;
    border-left: 4px solid #ee4f4f;
    margin: 40rpx 20rpx 20rpx 20rpx;
    padding-left: 20rpx;
}

.login-btn {
    width: 50%;
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
    position: relative;
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding-left: 14px;
    padding-right: 14px;
    box-sizing: border-box;
    text-align: center;
    text-decoration: none;
    line-height: 2.55555556;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: #fff!important;
    background-color: green!important;
}