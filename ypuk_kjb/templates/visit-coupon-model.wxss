.close-panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    left: 0;
    right: 0;
    margin: 0 auto;
    z-index: 999;
}

.close-line {
    width: 1px;
    background-color: #fff;
    height: 80rpx;
    box-shadow: 0 0 5rpx #f0f;
}

.close-circle {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    height: 70rpx;
    width: 70rpx;
    border: 1px solid #fff;
    border-radius: 50%;
    box-shadow: 0 0 5rpx #f0f;
}
 
.close-cross1 {
    width: 1px;
    height: 55rpx;
    background-color: #fff;
    line-height: 0;
    font-size: 0;
    vertical-align: middle;
    transform: rotate(45deg);
    box-shadow: 0 0 2rpx #f0f;
} 
.close-cross2 {
    width: 1px;
    height: 55rpx;
    background-color: #fff;
    line-height: 0;
    font-size: 0;
    vertical-align: middle;
    transform: rotate(-45deg);
    box-shadow: 0 0 2rpx #f0f;
    margin-top: -70rpx;
} 