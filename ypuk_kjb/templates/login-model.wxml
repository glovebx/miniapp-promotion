<template name="tempLogin">
    <view class="loginModel" hidden="{{loginModelHidden}}">
        <image class="loginImg" src="../../resource/images/login.png"></image>
        <view class="loginText">我们需要获得您的授权读取相关信息，才可参与或查看活动</view>
        <button bindgetuserinfo="updateUserInfo" class="loginBtn" openType="getUserInfo">微信授权登录</button>
    </view>
    <view class="loginBg" hidden="{{loginModelHidden}}"></view>
</template>
